{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings.d.ts"
    ],
    "rootDirs": [
      "./db",
      "./src",
      "./config"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es2016",
      "es2017.object"
    ]
  },
  "exclude": [
    "dist",
    "test"
  ]
}